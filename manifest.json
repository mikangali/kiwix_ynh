{
    "name": "Kiwix",
    "id": "kiwix",
    "description": {
        "en": "Wiki offline",
        "fr": "Wiki hors-line"
    },
    "developer": {
        "name": "ElieSauveterre",
        "email": "contact@mikangali.om",
        "url": "http://www.mikangali.com/"
    },
    "multi_instance": "false",
    "arguments": {
        "install": [
            {
                "name": "domain",
                "ask": {
                    "en": "Choose a domain for Kiwix"
                },
                "example": "domain.org",
                "default": "wireynh.mikangali.com"
            },
            {
                "name": "path",
                "ask": {
                    "en": "Choose a path for Kiwix"
                },
                "example": "/wiki",
                "default": "/wiki"
            },
            {
                "name": "is_public",
                "ask": {
                    "en": "Is it a public wiki ?",
                    "fr": "Est-ce un wiki public ?"
                },
                "choices": ["Yes", "No"],
                "default": "Yes"
            }

        ]
    }
}